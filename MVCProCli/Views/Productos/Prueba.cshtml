@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clase Básica de jQuery</title>

    <style>
        .error {
            color: red;
            font-size: 0.9em;
        }
    </style>

    <!-- Scripts en el orden correcto -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/mivalidacion.js"></script>
</head>
<body>
    <h1>PRODUCTO</h1>

    <form id="contactForm">
        <label for="name">Nombre:</label><br>
        <input type="text" id="nombre" name="nombre"><br>
        <span class="error" id="nombreError"></span><br>

        <label for="descripcion">Descripcion:</label><br>
        <input type="text" id="descripcion" name="descripcion"><br>
        <span class="error" id="nameDescripcion"></span><br>

        <label for="precio">Precio:</label><br>
        <input type="text" id="precio" name="precio"><br>
        <span class="error" id="precioError"></span><br><br>

        <label for="fecha">Fecha:</label><br>
        <input type="date" id="fecha" name="fecha"><br>
        <span class="error" id="fechaError"></span><br><br>

        <input type="submit" value="Enviar">
    </form>
</body>
</html>