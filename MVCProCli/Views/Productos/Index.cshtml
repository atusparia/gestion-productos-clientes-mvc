@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clase Básica de jQuery</title>

    <style>
        .error {
            color: red;
            font-size: 0.9em;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>    
    <script src="~/js/validaciones.js"></script>

</head>
</html>

<h1>Lista de Productos</h1>



<input type="text" id="txtFiltro" />
<button id="btnListarProductos" class="btn btn-primary">Listar</button>
<button id="btnCrearProducto" class="btn btn-primary">Crear</button>

<table class="table">
    <thead>
        <tr>            
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acción</th>
            <th>ID</th>
        </tr>
    </thead>

    <tbody>
    </tbody>
</table>


<!-- Modal para crear estudiante -->
<div class="modal fade" id="crearProductoModal" tabindex="-1" role="dialog" aria-labelledby="crearProductoLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="crearProductoLabel">Crear Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- El contenido del modal se carga aquí -->
                <div>
                    <form id="crearProductoForm">
                        <div class="form-group">
                            <label for="Name">Nombre</label>
                            <input type="text" id="nombre" name="nombre" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="Name">Precio</label>
                            <input type="text" id="precio" name="precio" class="form-control" />
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="Name">Stock</label>
                            <input type="text" id="stock" name="stock" class="form-control" />
                        </div>
                        <br />                        
                        <input type="submit" id="btnGrabarProducto" class="btn btn-success" value="Guardar"></input>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    $(document).ready(function () {

        //alert('ajax');

        $('#btnCrearProducto').click(function () {            
            $('#crearProductoModal').modal('show');
        });
               

        $('#btnListarProductos').click(function () {                                    
            GetProductos();
        });

        
        $('#btnGrabarProducto').click(function (event) {
            alert('Grabando');
            //event.preventDefault();

            //CreateProducto();

            if ($("#crearProductoForm").validate()) {
                Swal.fire({
                    title: "¡Éxito!",
                    text: "Producto agregado correctamente.",
                    icon: "success"
                });
            } else {
                Swal.fire({
                    title: "¡Error!",
                    text: "Por favor, completa correctamente los campos.",
                    icon: "error"
                });
            }
        });
        

        $(document).on("click", ".btnEliminar", function () {
            var productoId = $(this).data("id");
            
            //alert('ProductoID ' + productoId);
            
            Swal.fire({
                title: "¿Estás seguro?",
                text: "No podrás revertir esta acción.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar"
            }).then((result) => 
            {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "PUT",
                        url: "/Productos/DeleteProductos/" + productoId,
                        success: function (response) {
                            //alert(response.message);                        

                            Swal.fire({
                                title: "Buen trabajo!",
                                text: response.message,
                                icon: "success"
                            });

                            GetProductos();
                        },
                        error: function () {
                            alert("Error al eliminar");
                        }
                    });
                }
            
            });
        });

        function CreateProducto() {
            $.ajax({
                type: "POST",
                url: "/Productos/InsertProductos",
                data: {
                    nombre: $("#nombre").val(),
                    precio: $("#precio").val(),
                    stock: $("#stock").val(),                    
                },
                success: function (response) {
                    //alert('Registro exitoso');
                    //alert(response.message);

                    Swal.fire({
                        title: "Buen trabajo!",
                        text: response.message,
                        icon: "success"
                    });

                    $('#crearProductoModal').modal('hide');
                    GetProductos();
                },
                error: function () {
                    alert('Hubo un error al enviar el formulario');
                }
            });
        }

        function GetProductos() 
        { 
            var filtroProducto = $("#txtFiltro").val();

            $.ajax({
                type: "GET",
                url: "/Productos/GetProductos?filtro=" + filtroProducto,
                success: function (result) {

                    //alert('Luego de la URL');
                    console.log(result);

                    var tableBody = $('table tbody');
                    tableBody.empty(); // Vaciar la tabla

                    result.forEach(function (producto) {
                        var newRow = `<tr>
                                            <td>${producto.nombre}</td>
                                            <td>${producto.precio}</td>
                                            <td>${producto.stock}</td>
                                                <td>
                    <button class="btnEliminar" data-id="${producto.id}">❌ Eliminar</button>
                                            </td>
                                                <td>${producto.id}</td>
                                        </tr>`;
                        tableBody.append(newRow);
                    });
                },
                error: function () {
                    alert('Hubo un error al listar los productos.');
                }
            });
        }

    });
</script>